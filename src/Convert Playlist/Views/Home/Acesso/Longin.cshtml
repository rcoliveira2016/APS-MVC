@using System.Web.Optimization
@{
    Layout = string.Empty;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Convert Playlist | Entrar</title>
    @Styles.Render("~/Bundles/css")
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">Convert Playlist</a>
        </div>
        
        @if (ViewBag.Erros!=null && (ViewBag.Erros as string[]).Length > 0)
        {
            <div class="callout callout-danger">
                <h4>Erros</h4>

                @foreach (var erro in ViewBag.Erros)
                {
                    <p>
                        @erro
                    </p>
                }

            </div>
        }

        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Entre com sua conta do Spotify</p>

            <form method="post">
                <div class="social-auth-links text-center">
                    <button class="btn btn-block btn-social btn-spotify btn-flat">
                        <i class="fa fa-spotify fa-6"></i> Entrar
                        Spotify
                    </button>
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    @Scripts.Render("~/Bundles/js")
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
